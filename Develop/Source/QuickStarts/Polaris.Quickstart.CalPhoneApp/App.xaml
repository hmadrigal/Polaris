<PolarisPhoneLibToolkit:PolarisPhoneApp
    x:Class="Polaris.Quickstart.CalPhoneApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:PolarisPhoneLibToolkit="clr-namespace:Polaris.PhoneLib.Toolkit;assembly=Polaris.PhoneLib.Toolkit"
    >

    <!--Application Resources-->
    <PolarisPhoneLibToolkit:PolarisPhoneApp.Resources>
        <local:LocalizedStrings xmlns:local="clr-namespace:Polaris.Quickstart.CalPhoneApp" x:Key="LocalizedStrings"/>
    </PolarisPhoneLibToolkit:PolarisPhoneApp.Resources>

    <PolarisPhoneLibToolkit:PolarisPhoneApp.ApplicationLifetimeObjects>
        <!--Required object that handles lifetime events for the application-->
        <shell:PhoneApplicationService
            Launching="Application_Launching" Closing="Application_Closing"
            Activated="Application_Activated" Deactivated="Application_Deactivated"/>
    </PolarisPhoneLibToolkit:PolarisPhoneApp.ApplicationLifetimeObjects>

</PolarisPhoneLibToolkit:PolarisPhoneApp>